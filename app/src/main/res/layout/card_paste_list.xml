<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="3.5dp"
    android:outlineProvider="bounds"
    app:barrierMargin="10dp"
    app:cardBackgroundColor="#B34EAEAE"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    app:cardMaxElevation="4dp"
    app:contentPadding="1dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-1dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="0dp"
            android:background="#A6EC461C"
            android:elevation="3dp"
            android:orientation="horizontal"
            android:outlineProvider="paddedBounds">

            <TextView
                android:id="@+id/txtPasteListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:fontFamily="sans-serif-medium"
                android:text="TextView"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPasteListDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:text="TextView"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/txtPasteListTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="8dp"
                    android:fontFamily="sans-serif-light"
                    android:text="TextView"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="2dp"
            android:paddingTop="0dp"
            android:paddingRight="3dp"
            android:paddingBottom="1dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:fontFamily="sans-serif-condensed-light"
                android:text="Descriptiondescription blah blah description"
                android:textSize="12sp"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:outlineProvider="bounds"
                android:paddingLeft="3dp"
                android:paddingTop="2dp"
                android:paddingBottom="1dp"
                android:translationZ="-1dp">

                <TextView
                    android:id="@+id/txtPasteListContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="1.5dp"
                    android:layout_weight="0.3"
                    android:background="#752A81"
                    android:elevation="3dp"
                    android:fontFamily="serif-monospace"
                    android:maxLines="5"
                    android:minLines="2"
                    android:outlineProvider="paddedBounds"
                    android:paddingLeft="3dp"
                    android:paddingTop="2dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:text="TextViewasdfasdfasdfsadf\nasdfasdfasdf\nasdfasd\nasdfasdfasdf\nasdf\n349rt8w9ef8uhw4389fasdf"
                    android:textSize="9sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:paddingHorizontal="2dp">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="1"
                        android:clipToPadding="false">

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="29dp"
                            android:layout_height="50dp"
                            android:background="#0D1B7783"
                            android:outlineProvider="paddedBounds"
                            android:padding="1dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/dots_vertical" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="1dp"
                        android:layout_weight="1"
                        android:clipToPadding="false">

                        <ImageButton
                            android:id="@+id/btnImgGoToPaste"
                            android:layout_width="53dp"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:background="#A619A117"
                            android:cropToPadding="false"
                            android:elevation="1.5dp"
                            android:outlineProvider="paddedBounds"
                            android:padding="2dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/caretrighticon" />
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>